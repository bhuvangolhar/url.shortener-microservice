{
  "include": ["client/src/
    **/*", "shared/**/*", "server/**/*"],
  "exclude": ["node_modules", "build", "di
    st", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildI
    nfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx":  "pre
    serve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allow Import
    ingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl" : ".",
    "types":  ["node", "vite/client"],
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": [" ./shared/*"]
    }
  }
}
